doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title
    // css-libs (slick, animate ...)
    link(rel='stylesheet', type='text/css', href='css/libs.min.css')
    // js-libs (font awesome, slick, wow ...)
    script(src='js/libs.min.js')
    // own stylesheet and js
    link(rel='stylesheet', type='text/css', href='css/style.css')
    script(src='js/js.js', defer='')
  body
    // LOGIN FIELD
    .form-wrapper
      video#form-video(autoplay='', muted='', loop='')
        source(src='video/StockMarket076HD[720p].mp4', type='video/mp4')
      form.login-form(name='login-form', action='', method='POST')
        .login-form__error-info
        input.login-form__elem.login-form__email(type='email', name='email', placeholder='E-mail', required='', autocomplete='off', pattern='[a-z0-9._%+-]+@[a-z0-9.-]+.[a-z]{2,3}$', maxlength='40')
        input.login-form__elem.login-form__password(type='password', name='password', placeholder='Password', required='', autocomplete='off', minlength='8')
        //- input.login-form__elem.login-form__remember(type='checkbox', name='checkbox')
        //- |  Remember me
        label
          input.login-form__remember(type='checkbox', name='checkbox')
          span
        button.login-form__elem.login-form__submit-btn(type='submit', name='add') Sign In
        a.login-form__forgot-password(href='#') forgot your password?
    // /LOGIN FIELD
