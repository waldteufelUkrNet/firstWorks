doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description' content="Trade in your own way: currency pairs, stocks, indices, commodities and cryptocurrency.")

    title Password recovery
    link(rel='icon', href='assets/img/logo.png')

    // css-libs
    link(rel='stylesheet', type='text/css', href='assets/libs-css/reset.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/animate.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/et-line-font-plugin.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/icon54.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/material.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/font-awesome.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/mbr-additional.css')
    link(rel ='stylesheet', type='text/css', href='assets/libs-css/mobirise-icons-bold.css')

    // own stylesheet
    link(rel='stylesheet', type='text/css', href='assets/css/pages_with_forms.css')
    link(rel='stylesheet', type='text/css', href='assets/css/forms.css')

    // jQuery
    script(src='assets/libs/jquery.js')
  body
    // HEADER
    include assets/BEM-blocks/header/header_en.pug
    // /HEADER

    // MAIN SECTION
    main.main
      // SECTION 1
      .s1-wrapper(data-parallax="scroll" data-image-src="assets/img/pages_with_forms_bg.jpg")
        section.section1
          .section1__headers-wrapper
            h1.wow.fadeInUp.section1__header RECOVERY
              br
              |
              | PASSWORD
            h4.wow.fadeInUp.section1__subheader CLIENT SITE ZONE
          .section1__icon-wrapper
            span.mbrib-login.mbr-iconfont.mbr-iconfont-msg-box5
      // /SECTION 1

      // SECTION 2
      section.section2(style='padding-top: 50px')
        h4(style='font-family: fptb; font-size: 3rem; text-align: center; color: #525459; padding-bottom: 10px') Forgot your password?
        h6(style='font-family: fptb; font-size: 1.6rem; text-align: center; color: #525459; padding-bottom: 30px') A link to change your password will be sent to your email address that you provided during registration.
        include assets/BEM-blocks/form_forgot_your_password/form_forgot_your_password_en.pug
      // /SECTION 2
      include assets/BEM-blocks/payment_systems/payment_systems.pug
    // /MAIN SECTION

    // FOOTER
    include assets/BEM-blocks/footer/footer_en.pug
    // /FOOTER

    // scripts
    script(src='assets/libs/fontawesome-all.js')
    script(src='assets/libs/parallax.js')
    script(src="assets/libs/wow.js")
    script.
      new WOW().init();

    // own js
    script(src='assets/js/form_forgot_your_password.js')
    script(type="text/javascript").
      document.ondragstart = noselect;
      // запрет на перетаскивание
      document.onselectstart = noselect;
      // запрет на выделение элементов страницы
      document.oncontextmenu = noselect;
      // запрет на выведение контекстного меню
      function noselect() {return false;}