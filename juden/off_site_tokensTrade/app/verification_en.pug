doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description' content="Trade in your own way: currency pairs, stocks, indices, commodities and cryptocurrency.")

    title Verification
    link(rel='icon', href='assets/img/logo.png')

    // css-libs
    link(rel='stylesheet', type='text/css', href='assets/libs-css/reset.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/animate.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/et-line-font-plugin.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/icon54.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/material.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/font-awesome.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/mbr-additional.css')
    link(rel='stylesheet', type='text/css', href='assets/libs-css/mobirise-icons.css')

    // own stylesheet
    link(rel='stylesheet', type='text/css', href='assets/css/verification.css')

    // jQuery
    script(src='assets/libs/jquery.js')
  body
    // HEADER
    include assets/BEM-blocks/header/header_en.pug
    // /HEADER

    // MAIN SECTION
    main.main
      // SECTION 1
      .s1-wrapper(data-parallax="scroll" data-image-src="assets/img/verification_bg.jpg")
        section.section1
          .section1__headers-wrapper
            h1.wow.fadeInUp.section1__header VERIFICATION
              br
              |
              | OF THE USER
            h4.wow.fadeInUp.section1__subheader Identity Verification Procedure
              br
              |
              | of the user
          .section1__icon-wrapper
            span.mbri-users.mbr-iconfont.mbr-iconfont-msg-box5
      // /SECTION 1

      // SECTION 2
      .s2-wrapper
        section.section2
          h1.section2__header What is required for verification?
          h1.section2__subheader According to the rules of the company, you must undergo an account verification without fail, otherwise the account may be blocked.

          .section2__columns-wrapper
            .section2__left-column
              img(src="assets/img/bank_card.jpg", alt="bank_card.jpg")
            .section2__right-column
              .section2__right-column-header When replenishing an account through a bank card
              ul.accordion
                li.accordion__list-item
                  a.toggle.accordion__btn(href='javascript:void(0);') 1. Scan / Photo Card
                  .inner.accordion__content Scan / photo cards from two sides that you used to replenish your account on the platform, leaving the first and last 4 digits visible, the cardholder's name, expiration date, owner's signature.
                li
                  a.toggle.accordion__btn(href='javascript:void(0);') 2. Passport or ID card
                  .inner.accordion__content Proof of identity: passport or ID card
                li
                  a.toggle.accordion__btn(href='javascript:void(0);') 3. Residential address
                  .inner.accordion__content A document confirming the address of residence: utility bill, Internet bill or others, not older than 3 months.
                li
                  a.toggle.accordion__btn(href='javascript:void(0);') 4. Form F-306
                  .inner.accordion__content F-306 credit card authorization form
                li
                  a.toggle.accordion__btn(href='javascript:void(0);') 5. I-402 resolution
                  .inner.accordion__content I-402 resolution
      // /SECTION 2

      include assets/BEM-blocks/payment_systems/payment_systems.pug
    // /MAIN SECTION

    // FOOTER
    include assets/BEM-blocks/footer/footer_en.pug
    // /FOOTER

    // scripts
    script(src='assets/libs/fontawesome-all.js')
    script(src='assets/libs/parallax.js')
    script(src="assets/libs/wow.js")
    script.
      new WOW().init();

    // own js
    script(src='assets/js/verification.js')
    script(type="text/javascript").
      document.ondragstart = noselect;
      // запрет на перетаскивание
      document.onselectstart = noselect;
      // запрет на выделение элементов страницы
      document.oncontextmenu = noselect;
      // запрет на выведение контекстного меню
      function noselect() {return false;}